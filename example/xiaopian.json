{
  "name": "xiaopian_video",
  "link": "//div[@class='contain']/div[@class='bd2']/div[@class='bd3']/div[@class='bd3r']/div[@class='co_area2']/div[@class='co_content8']/div/a[text() = '下一页']/@href",
  "query": {
    "type": "comp",
    "xpath": "//div[@class='co_content8']/ul//table",
    "query": [
      {
        "type": "text",
        "xpath": ".//tr[3]/td[2]/font[@*]/text()",
        "matcher": "日期：(?:[-0-9]+)\\s*点击：([0-9]+)",
        "field": { "path": "click", "type": "long" }
      },
      {
        "type": "text",
        "xpath": ".//tr[2]/td[2]/b/a/@href",
        "matcher": "/(\\d+)\\.",
        "field": { "path": "id", "type": "long" }
      },
      {
        "type": "link",
        "xpath": ".//tr[2]/td[2]/b/a/@href",
        "field": { "path": "url", "type": "text" },
        "query": {
          "type": "comp",
          "xpath": "//div[@class='bd2']/div[@class='bd3']/div[@class='co_area2']/div[@class='co_content8']",
          "query": [{
            "type": "text",
            "xpath": ".//ul[1]/div[@class='position']/span[@class='updatetime']/text()",
            "matcher": "发布时间：([-0-9]+)",
            "field": { "path": "update_time", "type": "date" }
          }, {
            "type": "comp",
            "xpath": ".//div[@id='Zoom']",
            "query": [{
              "type": "attr",
              "xpath": "p[not(preceding-sibling::p[text()[contains(., '◎译　　名')]])]/img",
              "field": {
                "src": {
                  "path": "poster",
                  "type": "keyword"
                }
              }
            }, {
              "type": "article",
              "xpath": ".//p/text()|.//span/text()|.//font/text()",
              "query": [
                {
                  "type": "text",
                  "matcher": "◎片　　名　(.+)\\n",
                  "field": { "path": "name", "type": "text" }
                }, {
                  "type": "text",
                  "matcher": "◎年　　代　.*?(\\d\\d\\d\\d)\\n",
                  "field": {
                    "path": "year",
                    "type": "int"
                  }
                }, {
                  "type": "text",
                  "matcher": "◎产　　地　(.+)\\n",
                  "field": { "path": "region", "type": "text" }
                }, {
                  "type": "text",
                  "matcher": "◎类　　别　(.+)\\n",
                  "field": { "path": "category", "type": "keyword" }
                }, {
                  "type": "text",
                  "matcher": "◎语　　言　(.+)\\n",
                  "field": { "path": "language", "type": "keyword" }
                }, {
                  "type": "text",
                  "matcher": "◎字　　幕　(.+)\\n",
                  "field": { "path": "subtitle_lang", "type": "string" }
                }, {
                  "type": "text",
                  "matcher": "◎上映日期\\s*([-0-9]+)\\(([^(]+)\\)(?:/([-0-9]+)\\(([^(]+)\\))?(?:/([-0-9]+)\\(([^(]+)\\))?(?:/([-0-9]+)\\(([^(]+)\\))?\\s*\\n",
                  "scope": "release_date",
                  "multivar": true,
                  "field": [
                    { "path": "date", "type": "date" },
                    { "path": "region", "type": "string" }
                  ]
                }, {
                  "type": "scope",
                  "scope": "rating",
                  "query": [{
                    "type": "text",
                    "matcher": "◎豆瓣评分　([0-9.]+)/([0-9]+).*?([,0-9]+).*\\n",
                    "scope": "douban",
                    "field": [
                      { "path": "score", "type": "float" },
                      { "path": "full_score", "type": "int" },
                      { "path": "population", "type": "long" }
                    ]
                  }, {
                    "type": "text",
                    "matcher": "◎IMDb评分　([0-9.]+)/([0-9]+).*?([,0-9]+).*\\n",
                    "scope": "imdb",
                    "field": [
                      { "path": "score", "type": "float" },
                      { "path": "full_score", "type": "int" },
                      { "path": "population", "type": "long" }
                    ]
                  }]
                }, {
                  "type": "text",
                  "matcher": "◎片　　长　([0-9]+.+)\\n",
                  "field": [{ "path": "duration", "type": "interval" }]
                }, {
                  "type": "text",
                  "matcher": "◎导　　演　(.+)\\n",
                  "field": [{ "path": "director", "type": "keyword" }]
                }, {
                  "type": "text",
                  "match_start": { "matcher": "◎主　　演　", "include": false, "required": true },
                  "match_end": { "matcher": "◎内容简介|◎简　　介", "include": false, "required": true },
                  "matcher": "([^\\n]+\\n)",
                  "multivar": true,
                  "scope": "actor"
                }, {
                  "type": "text",
                  "match_start": { "matcher": "◎简　　介", "include": false, "required": true },
                  "match_end": { "matcher": "(?:◎影片截图|下载地址)", "include": false, "required": true },
                  "scope": "summary",
                  "merge": {
                    "strategy": "append",
                    "seperator": "\n"
                  }
                }]
            }, {
                "type": "text",
                "xpath": ".//table[preceding-sibling::p[text()[contains(., '◎影片截图')]]]//tr/td/a/@href",
                "multivar": true,
                "scope": "video_url"
            }]
          }]
        }
      }
    ]
  }
}